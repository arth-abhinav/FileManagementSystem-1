<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewsearchdetailsfileid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File ID:"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textViewsearchdetailsfilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Name:"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textViewsearchdetailsfileholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIle Holder:"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textViewsearchdetailsfiledepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department:"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>